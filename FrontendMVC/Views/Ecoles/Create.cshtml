@model FrontendMVC.Models.ViewModels.EcoleViewModel
@{
    ViewData["Title"] = "Créer une école";
}

<div class="card shadow-lg border-0 w-100 mx-auto mt-4" style="max-width: 800px;">
    <div class="card-header bg-dark text-white text-center py-3 rounded-top">
        <h3 class="mb-0"><i class="bi bi-building-fill"></i> Nouvelle école</h3>
    </div>

    <div class="card-body px-4 py-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-12" asp-validation-summary="All"></div>
                <div class="col-md-6">
                    <label asp-for="Matricule_Secope" class="form-label fw-semibold"></label>
                    <input asp-for="Matricule_Secope" class="form-control" placeholder="Ex: SECOPE12345" />
                    <span asp-validation-for="Matricule_Secope" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TitreEcole" class="form-label fw-semibold"></label>
                    <input asp-for="TitreEcole" class="form-control" placeholder="Ex: École Primaire Lumumba" />
                    <span asp-validation-for="TitreEcole" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="AdresseEcole" class="form-label fw-semibold"></label>
                    <input asp-for="AdresseEcole" class="form-control" placeholder="Adresse complète..." />
                    <span asp-validation-for="AdresseEcole" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="PhotoFile" class="form-label fw-semibold">Photo</label>
                    <input type="file" asp-for="PhotoFile" class="form-control" />
                    <span asp-validation-for="PhotoFile" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="HistoriqueEcole" class="form-label fw-semibold"></label>
                    <textarea asp-for="HistoriqueEcole" class="form-control" rows="4" placeholder="Historique de l’école..."></textarea>
                    <span asp-validation-for="HistoriqueEcole" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Arrete_Agreement" class="form-label fw-semibold"></label>
                    <input asp-for="Arrete_Agreement" class="form-control" placeholder="N° arrêté ou agrément" />
                    <span asp-validation-for="Arrete_Agreement" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="LatitudeEcole" class="form-label fw-semibold"></label>
                    <input asp-for="LatitudeEcole" class="form-control" type="number" step="0.000001" placeholder="Lat." />
                    <span asp-validation-for="LatitudeEcole" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="LongitudeEcole" class="form-label fw-semibold"></label>
                    <input asp-for="LongitudeEcole" class="form-control" type="number" step="0.000001" placeholder="Long." />
                    <span asp-validation-for="LongitudeEcole" class="text-danger small"></span>
                </div>

                <div class="col-12 text-center pt-3">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-check-circle"></i> Enregistrer
                    </button>
                    <a asp-controller="Ecoles" asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-x-circle"></i> Annuler
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
