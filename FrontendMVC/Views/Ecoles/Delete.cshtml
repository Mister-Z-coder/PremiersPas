@model FrontendMVC.Models.ViewModels.EcoleViewModel

@{
    ViewData["Title"] = "Supprimer l'école";
}

<div class="card shadow-lg border-0 w-100 mx-auto mt-4" style="max-width: 800px;">
    <div class="card-header bg-danger text-white text-center py-3 rounded-top">
        <h3 class="mb-0"><i class="bi bi-trash-fill"></i> Suppression de l’école</h3>
    </div>

    <div class="card-body px-4 py-4">
        <h5 class="text-center text-danger mb-4 fw-semibold">
            Êtes-vous sûr de vouloir supprimer cette école ?
            <br />
            <small class="text-muted">Cette action est irréversible.</small>
        </h5>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Matricule_Secope" class="form-label fw-semibold"></label>
                <input asp-for="Matricule_Secope" class="form-control" readonly />
            </div>

            <div class="col-md-6">
                <label asp-for="TitreEcole" class="form-label fw-semibold"></label>
                <input asp-for="TitreEcole" class="form-control" readonly />
            </div>

            <div class="col-md-12">
                <label asp-for="AdresseEcole" class="form-label fw-semibold"></label>
                <input asp-for="AdresseEcole" class="form-control" readonly />
            </div>

            <div class="col-md-12">
                <label asp-for="HistoriqueEcole" class="form-label fw-semibold"></label>
                <textarea asp-for="HistoriqueEcole" class="form-control" rows="4" readonly></textarea>
            </div>

            <div class="col-md-6">
                <label asp-for="Arrete_Agreement" class="form-label fw-semibold"></label>
                <input asp-for="Arrete_Agreement" class="form-control" readonly />
            </div>

            <div class="col-md-3">
                <label asp-for="LatitudeEcole" class="form-label fw-semibold"></label>
                <input asp-for="LatitudeEcole" class="form-control" readonly />
            </div>

            <div class="col-md-3">
                <label asp-for="LongitudeEcole" class="form-label fw-semibold"></label>
                <input asp-for="LongitudeEcole" class="form-control" readonly />
            </div>

            @if (!string.IsNullOrEmpty(Model.PhotoEcoleUrl))
            {
            <div class="col-md-12 text-center mt-3">
                <img src="@Model.PhotoEcoleUrl"
                     alt="Photo de l'école"
                     class="img-fluid rounded shadow-sm border"
                     style="max-height: 250px; object-fit: cover;" />
            </div>
            }
        </div>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <a asp-controller="Ecoles" asp-action="Index" class="btn btn-secondary px-4 me-2">
                <i class="bi bi-arrow-left-circle"></i> Annuler
            </a>
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash"></i> Supprimer définitivement
            </button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
